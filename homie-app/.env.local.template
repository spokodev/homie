# Homie Environment Variables Template
# Copy this file to .env.local and fill in your values

# Supabase Configuration
EXPO_PUBLIC_SUPABASE_URL=https://YOUR_PROJECT_ID.supabase.co
EXPO_PUBLIC_SUPABASE_ANON_KEY=YOUR_ANON_KEY

# RevenueCat Configuration (для монетизації)
EXPO_PUBLIC_REVENUECAT_IOS_KEY=YOUR_IOS_KEY
EXPO_PUBLIC_REVENUECAT_ANDROID_KEY=YOUR_ANDROID_KEY

# Sentry Configuration (для відстеження помилок)
EXPO_PUBLIC_SENTRY_DSN=https://YOUR_SENTRY_DSN@sentry.io/YOUR_PROJECT_ID

# PostHog Configuration (для аналітики)
EXPO_PUBLIC_POSTHOG_API_KEY=YOUR_POSTHOG_KEY
EXPO_PUBLIC_POSTHOG_HOST=https://app.posthog.com

# Apple App Store Configuration
APPLE_TEAM_ID=YOUR_TEAM_ID
APPLE_BUNDLE_IDENTIFIER=com.homieapp.homie

# EAS Configuration
EAS_PROJECT_ID=YOUR_EAS_PROJECT_ID

# App Environment
EXPO_PUBLIC_ENVIRONMENT=development  # development | staging | production

# Optional: API Base URL (якщо будемо використовувати кастомний API)
EXPO_PUBLIC_API_URL=https://api.homie.app

# Optional: Deep Linking
EXPO_PUBLIC_DEEP_LINK_SCHEME=homie